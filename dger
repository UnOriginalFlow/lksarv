local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({
    Name = "Dreamyware",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "DreamywareCBX",
    IntroEnabled = true,
    IntroText = "D r e a m y w a r e",
    IntroIcon = "rbxassetid://4483345998"
})

-- Retro Purple/Black Theme
OrionLib:MakeNotification({
    Name = "Loaded",
    Content = "Dreamyware activated ⚡",
    Image = "rbxassetid://4483345998",
    Time = 3
})

local Tab1 = Window:MakeTab({
    Name = "Combat",
    Icon = "rbxassetid://4483362458",
    PremiumOnly = false
})

local Tab2 = Window:MakeTab({
    Name = "Visuals",
    Icon = "rbxassetid://4483360976",
    PremiumOnly = false
})

local Tab3 = Window:MakeTab({
    Name = "Skins",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local Tab4 = Window:MakeTab({
    Name = "Misc",
    Icon = "rbxassetid://4483361427",
    PremiumOnly = false
})

-- Combat Tab: Aimbot Rage/Legit
Tab1:AddToggle({
    Name = "Aimbot",
    Default = false,
    Callback = function(Value)
        getgenv().AimbotEnabled = Value
        -- CBX aimbot logic (paste your hook here or use AirHub core)
    end    
})
Tab1:AddSlider({
    Name = "Aim FOV",
    Min = 0,
    Max = 500,
    Default = 100,
    Color = Color3.fromRGB(139, 0, 255),
    Increment = 1,
    ValueName = "px",
    Callback = function(Value)
        getgenv().AimFOV = Value
    end    
})
Tab1:AddToggle({
    Name = "Silent Aim",
    Default = false,
    Callback = function(Value)
        getgenv().SilentAim = Value
    end    
})
Tab1:AddDropdown({
    Name = "Aim Part",
    Default = "Head",
    Options = {"Head", "HumanoidRootPart", "UpperTorso"},
    Callback = function(Value)
        getgenv().AimPart = Value
    end    
})

-- Visuals Tab: ESP/Tracers
Tab2:AddToggle({
    Name = "Box ESP",
    Default = false,
    Callback = function(Value)
        -- Toggle Drawing boxes (from earlier ESP)
    end    
})
Tab2:AddToggle({
    Name = "Tracers",
    Default = false,
    Callback = function(Value)
        getgenv().Tracers = Value
    end    
})
Tab2:AddColorpicker({
    Name = "ESP Color",
    Default = Color3.fromRGB(139, 0, 255),
    Callback = function(Value)
        getgenv().ESPColor = Value
    end     
})

-- Skins Tab: CBX Skin Changer
Tab3:AddDropdown({
    Name = "Knife Skin",
    Default = "Default",
    Options = {"Karambit Fade", "Butterfly Doppler", "M9 Bayonet", "Flip Knife"},
    Callback = function(Value)
        -- Apply skin remote spoof (use Hydro dump IDs)
        print("Knife: " .. Value)
    end    
})
Tab3:AddDropdown({
    Name = "Gloves",
    Default = "Default",
    Options = {"Sporty", "Driver", "Handwraps", "Moto"},
    Callback = function(Value)
        print("Gloves: " .. Value)
    end    
})
Tab3:AddButton({
    Name = "Steal Best Skin",
    Callback = function()
        -- Loop players, clone rarest
        print("Stolen ⚡")
    end    
})

-- Misc Tab: Movement/Other
Tab4:AddToggle({
    Name = "No Recoil",
    Default = false,
    Callback = function(Value)
        getgenv().NoRecoil = Value
    end    
})
Tab4:AddSlider({
    Name = "Walkspeed",
    Min = 16,
    Max = 100,
    Default = 16,
    Color = Color3.fromRGB(139, 0, 255),
    Increment = 1,
    ValueName = "spu",
    Callback = function(Value)
        if game.Players.LocalPlayer.Character then
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
        end
    end    
})
Tab4:AddButton({
    Name = "Rejoin",
    Callback = function()
        game:GetService("TeleportService"):Teleport(game.PlaceId, game.Players.LocalPlayer)
    end    
})

OrionLib:Init()
print("Dreamyware UI loaded - purple retro vibes ⚡")
